<section class="calc-form">
    <h1>Calculator</h1>

    <form id="calc-form" action="/calc" method="POST" onsubmit="return calc()">
        <div class="row">
            <div class="col-lg-6 col-sm-5">
                <div class="form-group">
                    <label>First number:</label>
                    <input type="text" class="form-control" value="{{firstNum}}" name="firstNum" id="firstNum" placeholder="First number"
                        onblur="checkFirstNum()">
                </div>
                <div class="form-group">
                    <label>Second number:</label>
                    <input type="text" class="form-control" value="{{secondNum}}" name="secondNum" id="secondNum" placeholder="Second number"
                        onblur="checkSecondNum()">
                </div>
                <div class="form-group">
                    <label>Result:</label>
                    <input type="text" class="form-control"  value="{{resultNum}}" id="result" placeholder="Result" readonly>
                </div>
            </div>
            <div class="col-lg-3 col-sm-3">
                <div class="mt-4">
                    <div class="form-check radio-check">
                        <input class="form-check-input" type="radio" name="method" id="addition" value="addition_method" {{additionChecked}}>
                        <label class="form-check-label" onclick="checkedMethod()">Addition</label>
                    </div>
                    <div class="form-check radio-check">
                        <input class="form-check-input" type="radio" name="method" id="subtraction" value="subtraction_method" {{subtractionChecked}}>
                        <label class="form-check-label" onclick="checkedMethod()">Subtraction</label>
                    </div>

                    <div class="form-check radio-check">
                        <input class="form-check-input" type="radio" name="method" id="multiplication" value="multiplication_method" {{multiplicationChecked}}>
                        <label class="form-check-label" onclick="checkedMethod()">Multiplication</label>
                    </div>
                    <div class="form-check radio-check">
                        <input class="form-check-input" type="radio" name="method" id="division" value="division_method" {{divisionChecked}}>
                        <label class="form-check-label" onclick="checkedMethod()">Division</label>
                    </div>
                </div>
                <button type="submit" id="submitData" class="btn btn-primary btn-lg btn-block calculate-button">Calculate</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-lg-9">
            <div class="shadow-none p-4 mb-4 bg-light noti">
                <p>Notification:</p>
                <p id="notiNum1"></p>
                <p id="notiNum2"></p>
                <p id="notiResult"></p>
            </div>
        </div>
    </div>
</section>